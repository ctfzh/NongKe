<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/recharge_discount_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                style="@style/user_info_txt"
                android:text="@string/recharge_discount" />

            <TextView
                android:id="@+id/tv_vip_recharge"
                style="@style/user_info_txt"
                android:layout_marginLeft="0dp"
                android:text="@string/you_are_not_vip"
                android:textColor="@color/app_color" />
        </LinearLayout>

        <View style="@style/horizontal_divider" />

        <LinearLayout
            android:id="@+id/recharge_phone_num_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/color_f2f2f2">

            <TextView
                android:id="@+id/tv_recharge_phone_num"
                style="@style/user_info_txt"
                android:textColor="@color/app_color" />

        </LinearLayout>

        <View style="@style/horizontal_divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_recharge_50"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/shape_recharge_ammount_bg_select"
                    android:gravity="center"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_recharge_100"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_recharge_ammount_bg"
                    android:gravity="center"
                    android:paddingBottom="20dp"
                    android:paddingTop="20dp"
                    android:textColor="@color/color_black"
                    android:textSize="16sp" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            style="@style/user_info_txt"
            android:layout_marginTop="20dp"
            android:text="@string/pay_method" />

        <LinearLayout
            android:id="@+id/ll_pay_alipay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_pay_alipay"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_pay_select" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/icon_alipay" />

            <TextView
                style="@style/user_info_txt"
                android:text="@string/pay_alipay" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_pay_wechat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_pay_wechat"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_pay_unselect" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/icon_wechat" />

            <TextView
                style="@style/user_info_txt"
                android:text="@string/pay_wechat" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_money_recharge"
            style="@style/user_info_txt"
            android:layout_marginTop="20dp"
            android:text="@string/recharge_ammount" />

        <TextView
            android:id="@+id/tv_money_pay"
            style="@style/user_info_txt"
            android:layout_marginTop="20dp"
            android:text="@string/recharge_pay_indeed" />

        <TextView
            android:id="@+id/tv_recharge_immediate"
            style="@style/btn_selector_match_style"
            android:layout_marginBottom="20dp"
            android:text="@string/recharge_immedate"/>

    </LinearLayout>

</ScrollView>
